<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ApplianceRepair">

    <TextView
        android:id="@+id/one_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Appliance Repair Services"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        ></TextView>

    <Button
        android:id="@+id/oven_repair_services_btn"
        android:layout_below="@+id/one_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/input_design"
        android:text="Oven Repair Services"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/tv_repair_services_btn"
        android:layout_below="@+id/oven_repair_services_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:text="TV Repair Services"
        android:textAllCaps="false"
        android:padding="15dp"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/refrigerator_repair_services_btn"
        android:layout_below="@+id/tv_repair_services_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:text="Refrigerator Repair Services"
        android:padding="15dp"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/washing_machine_repair_services_btn"
        android:layout_below="@+id/refrigerator_repair_services_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:text="Washing Machine Repair Services"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:padding="15dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/ips_repair_services_btn"
        android:layout_below="@+id/washing_machine_repair_services_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:text="IPS Repair Services"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>


</RelativeLayout>